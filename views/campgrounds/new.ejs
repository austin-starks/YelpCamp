<%- include("../partials/header") %>
<div class = "container">
     <div class = "row">
          <h1 style = "text-align:center;">
               Create a New Campground
          </h1>
          <div style= "width: 40%; margin: 25px auto;">
               <form action = "/campgrounds", method = "POST">
                    <div class = "form-group">
                         <input class = "form-control" type = "text", name = "newCampground", placeholder = "Name of Campground">
                    </div>
				   <div class = "form-group">
                         <input class = "form-control" type = "number", name = "price", placeholder = "price" min="0.00" step="0.01">
                    </div>
                    <div class = "form-group">
                         <input class = "form-control" type = "text", name = "imageURL", placeholder = "Image URL">
                    </div>
                    <div class = "form-group">
                         <input class = "form-control" type = "text", name = "description", placeholder = "description">
                    </div>
                    <div class = "form-group">
                         <button class = "btn btn-lg btn-primary btn-block">
                              Add Campground
                         </button>
                    </div>
               </form>
          <a href = "/campgrounds">Go back</a>
          </div>
      </div>
</div>

<%- include("../partials/footer") %>